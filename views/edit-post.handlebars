{{!-- Post --}}
  <article>
    <a href="/dashboard"> &larr; Back to dashboard</a>

    <h2>Edit Post</h2>

    <form id="form-edit-post">
      <div class="title-post">
        <input name="post-title" type="text" value="{{post.title}}" />
        <span>({{format_url post.post_url}})</span>
      </div>

      <div class="info-post">
        {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>

      <div class="btns-post">
        <button type="submit">Save</button>
        <button type="button" class="delete-post-btn">Delete</button>
      </div>
    </form>

  </article>

{{!-- Comment Form --}}
  <form id="form-comment">
    <div class="body-comment">
      <textarea name="comment-body"></textarea>
    </div>

    <div class="btns-comment">
      <button type="submit">Add a comment</button>
    </div>
  </form>

{{> comments post.comments}}

{{#if loggedIn}}
  <script src="../public/javascript/edit-post.js"></script>
  <script src="../public/javascript/delete-post.js"></script>
  <script src="../public/javascript/comment.js"></script>
{{/if}}
